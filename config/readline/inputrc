# Show all possibilities for completion immediately
set show-all-if-ambiguous on

# Display prefix in menu completion
set menu-complete-display-prefix on

# Use menu completion on TAB
TAB: menu-complete

# Enable colored completion prefix
set colored-completion-prefix on

# Enable colored statistics (like file sizes in completion)
set colored-stats on

# Enable case-insensitive completion
set completion-ignore-case on

# History search (up/down arrows search through history based on current input)
"\e[A": history-search-backward
"\e[B": history-search-forward
